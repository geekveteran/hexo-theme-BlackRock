<% if (theme.links && theme.links.length){ %>
  <div class="widget-wrap">
    <h3 class="widget-title"><i class="BR BR-link"></i> <%= __('blogTourist') %></h3>
    <div class="widget">
      <ul>
      <% theme.links.forEach(function(link){ %>
        <li>
          <a href="<%- url_for(link.url) %>"><%= link.title || '(no title)' %></a>
        </li>
      <% }) %>
      </ul>
    </div>
  </div>
<% } %>
